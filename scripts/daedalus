#!/bin/bash
# Daedalus CLI wrapper
# Symlink this to ~/bin/daedalus or /usr/local/bin/daedalus

SOURCE="${BASH_SOURCE[0]}"
while [ -L "$SOURCE" ]; do
    DIR="$(cd -P "$(dirname "$SOURCE")" && pwd)"
    SOURCE="$(readlink "$SOURCE")"
    [[ $SOURCE != /* ]] && SOURCE="$DIR/$SOURCE"
done
SCRIPT_DIR="$(cd -P "$(dirname "$SOURCE")" && pwd)"
exec python3 "$SCRIPT_DIR/daedalus.py" "$@"
